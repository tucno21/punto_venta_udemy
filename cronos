<?php

if (strpos(PHP_SAPI, 'cgi') === 0) {
    exit("La herramienta cli no es compatible cuando se ejecuta php-cgi. Â¡Necesita php-cli para funcionar!\n\n");
}

error_reporting(-1);
ini_set('display_errors', '1');

require __DIR__ . '/vendor/autoload.php';
$data = $_SERVER['argv'];
$console = new System\ConsoleCLI($data);

$console->run();
